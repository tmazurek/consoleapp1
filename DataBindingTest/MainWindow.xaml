<Window x:Class="DataBindingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Name"></Label>
                <Label Content="ISBN"></Label>
                <Label Content="Description"></Label>
            </StackPanel>
            <StackPanel MinWidth="111">
                <TextBlock Height="23" Name="textBlock1" Text="{Binding Name}" />
                <TextBlock Height="23" Name="textBlock2" Text="{Binding ISBN}" />
                <TextBlock Height="23" Name="textBlock3" Text="{Binding Description}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
