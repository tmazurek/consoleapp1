<Window x:Class="MVVMdemo.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Orientation="Horizontal">
            <Label Content="Label"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Customer.Name, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
            <Button Command="{Binding UpdateCommand}" Content="Button" Width="75"/>
        </StackPanel>

    </Grid>
</Window>
